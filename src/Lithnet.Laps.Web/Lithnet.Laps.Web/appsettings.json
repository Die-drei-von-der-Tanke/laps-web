{
  "Logging": {
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "hosting": {
    "environment": "httpsys",
    "bind-ip": "0.0.0.0",
    "bind-port": 443
  },
  "authentication": {
    "mode": "iwa",
    "iwa": {
    },
    "oidc": {
      "client-id": "bla",
      "secret": "bla",
      "redirect-uri": "bla",
      "authority": "bla",
      "idp-logout": true
    },
    "wsfed": {
      "realm": "bla",
      "metadata": "bla",
      "idp-logout": true
    }
  },
  "authorization": {
    "json-provider": {
      "enabled": true,
      "authorization-file": "app_data\\targets.json"
    },
    "powershell-provider": {
      "enabled": true,
      "script-file": "app_data\\authzsample.ps1",
      "timeout": 30
    }
  },
  "email": {
    "host": "smtp.lithnet.local",
    "port": 25,
    "use-ssl": true,
    "use-default-credentials": false,
    "username": "username",
    "password": "password",
    "from-address": "laps@lithnet.local"
  },
  "email-auditing": {
    "on-success": [ "laps-admin@lithnet.local" ],
    "on-failure": [ "laps-admin@lithnet.local" ]
  },
  "rate-limit": {
    "per-ip": {
      "enabled": true,
      "requests-per-minute": 5,
      "requests-per-hour": 51,
      "requests-per-day": 101
    },
    "per-user": {
      "enabled": true,
      "requests-per-minute": 6,
      "requests-per-hour": 52,
      "requests-per-day": 102
    },
    "xff-ip-resolver": {
      "trusted-networks": [ "127.0.0.1/32" ],
      "trusted-proxies": [  "::1" ],
      "forward-limit": 0,
      "xff-header-name": "X-Forwarded-For",
      "xfp-header-name": "X-Forwarded-Proto"
    }
  },
  "user-interface": {
    "title": "Lithnet LAPS Web App .NET Core Edition!",
    "user-supplied-reason": "optional"
  }
}

{
  "hosting": {
    "environment": "iis",
    "httpsys": {
      "urls": [ "http://localhost:5000", "https://localhost:5001" ],
      "max-connections": 100,
      "max-request-body-size": 2480000,
      "allow-client-certs": true,
      "http-503-verbosity": "Limited",
      "enable-response-caching": false,
      "allow-synchronous-io": false
    }
  },
  "authentication": {
    "mode": "iwa",
    "iwa": {
      "authentication-schemes": [ "Negotiate", "NTLM", "Kerberos", "None", "Basic" ]
    },
    "oidc": {
      "client-id": "bla",
      "secret": "bla",
      "redirect-uri": "bla",
      "authority": "bla",
      "idp-logout": true
    },
    "wsfed": {
      "realm": "bla",
      "metadata": "bla",
      "idp-logout": true
    }
  },
  "authorization": {
    "json-provider": {
      "enabled": true,
      "authorization-file": "app_data\\targets.json"
    },
    "powershell-provider": {
      "enabled": true,
      "script-file": "app_data\\authzsample.ps1",
      "timeout": 30
    }
  },
  "auditing": {
    "channels": [
      {
        "id": "email-domain-admins",
        "type": "email",
        "template-success": "EmailAuditSuccess",
        "template-failure": "EmailAuditFailure",
        "email-addresses": [ "laps-admin@lithnet.local" ]
      },
      {
        "id": "slack-web-hook-da-channel",
        "type": "webhook",
        "url": "https://xx",
        "content-type": "application/json",
        "template-success": "SlackTemplateSuccess",
        "template-failure": "SlackTemplateFailure"
      }
    ]
  },
  "email": {
    "host": "smtp.lithnet.local",
    "port": 25,
    "use-ssl": true,
    "use-default-credentials": false,
    "username": "username",
    "password": "password",
    "from-address": "laps@lithnet.local"
  },
  "email-auditing": {
    "on-success": [ "laps-admin@lithnet.local" ],
    "on-failure": [ "laps-admin@lithnet.local" ]
  },
  "rate-limit": {
    "per-ip": {
      "enabled": true,
      "requests-per-minute": 5,
      "requests-per-hour": 51,
      "requests-per-day": 101
    },
    "per-user": {
      "enabled": true,
      "requests-per-minute": 6,
      "requests-per-hour": 52,
      "requests-per-day": 102
    },
    "xff-ip-resolver": {
      "trusted-networks": [ "127.0.0.1/32" ],
      "trusted-proxies": [ "::1" ],
      "forward-limit": 0,
      "xff-header-name": "X-Forwarded-For",
      "xfp-header-name": "X-Forwarded-Proto"
    }
  },
  "user-interface": {
    "title": "Lithnet LAPS Web App .NET Core Edition!",
    "user-supplied-reason": "optional"
  }
}

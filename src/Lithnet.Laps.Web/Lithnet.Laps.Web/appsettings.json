{
  "hosting": {
    "environment": "httpsys",
    "httpsys": {
      "urls": [ "http://+:80", "https://+:443" ],
      "max-connections": 100,
      "max-request-body-size": 2480000,
      "allow-client-certs": true,
      "http-503-verbosity": "Limited",
      "enable-response-caching": false,
      "allow-synchronous-io": false
    }
  },
  "authentication": {
    "mode": "iwa",
    "iwa": {
      "authentication-schemes": [ "Negotiate", "NTLM", "Kerberos", "None", "Basic" ]
    },
    "oidc": {
      "client-id": "bla",
      "secret": "bla",
      "redirect-uri": "bla",
      "authority": "bla",
      "idp-logout": true
    },
    "wsfed": {
      "realm": "bla",
      "metadata": "bla",
      "idp-logout": true
    }
  },
  "authorization": {
    "json-provider": {
      "enabled": true,
      "authorization-file": "targets.json"
    },
    "powershell-provider": {
      "enabled": true,
      "script-file": "scripts\\authzsample.ps1",
      "timeout": 30
    }
  },
  "auditing": {
    "notification-channels": {
      "smtp": [
        {
          "enabled": false,
          "id": "email-domain-admins",
          "template-success": "EmailAuditSuccess.html",
          "template-failure": "EmailAuditFailure.html",
          "email-addresses": [ "laps@lithnet.local" ]
        }
      ],
      "webhook": [
        {
          "enabled": false,
          "id": "slack-web-hook-da-channel",
          "template-success": "SlackTemplateSuccess.json",
          "template-failure": "SlackTemplateFailure.json",
          "url": "https://xx",
          "http-method": "POST",
          "content-type": "application/json"
        },
        {
          "enabled": false,
          "id": "teams-web-hook-da-channel",
          "template-success": "TeamsTemplateSuccess.json",
          "template-failure": "TeamsTemplateFailure.json",
          "url": "https://xx",
          "http-method": "POST",
          "content-type": "application/json"
        }
      ],
      "powershell": [
        {
          "enabled": true,
          "id": "send-to-powershell",
          "script": "scripts/audit.ps1"
        }
      ]
    },
    "global-notifications": {
      "on-success": [ "email-domain-admins" ],
      "on-failure": [ "email-domain-admins" ]
    }
  },
  "email": {
    "host": "smtp.lithnet.local",
    "port": 25,
    "use-ssl": true,
    "use-default-credentials": false,
    "username": "username",
    "password": "password",
    "from-address": "laps@lithnet.local"
  },
  "rate-limit": {
    "per-ip": {
      "enabled": true,
      "requests-per-minute": 5,
      "requests-per-hour": 51,
      "requests-per-day": 101
    },
    "per-user": {
      "enabled": true,
      "requests-per-minute": 6,
      "requests-per-hour": 52,
      "requests-per-day": 102
    },
    "xff-ip-resolver": {
      "trusted-networks": [ "127.0.0.1/32" ],
      "trusted-proxies": [ "::1" ],
      "forward-limit": 0,
      "xff-header-name": "X-Forwarded-For",
      "xfp-header-name": "X-Forwarded-Proto"
    }
  },
  "user-interface": {
    "title": "Lithnet LAPS Web App .NET Core Edition!",
    "user-supplied-reason": "optional"
  }
}

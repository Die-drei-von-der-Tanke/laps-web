@using System.Configuration
@using Lithnet.Laps.Web
@using Lithnet.Laps.Web.AppSettings
@using Unity

@{
    var uiSettings = UnityConfig.Container.Resolve<IUserInterfaceSettings>();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@uiSettings.Title</title>
    @Styles.Render("~/Content/css")
    <script src="@Url.Content("~/Scripts/clipboard.min.js")"></script>
    <link href="@Url.Content("~/Content/fontawesome/fontawesome-all.css")" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="content">
        <div class="app-header">
            <img class="app-logo" alt="@uiSettings.Title" src="~/images/logo.png" />
            <div class="app-title">@uiSettings.Title</div>
        </div>
        @RenderBody()
    </div>
    @if (MvcApplication.CanLogout)
    {
        <div class="center-content">
            <a class="logout-link" href="@Url.Action("SignOut", "Home")">@UIMessages.Logout</a>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

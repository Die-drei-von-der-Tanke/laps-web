{
  "@type": "MessageCard",
  "@context": "http://schema.org/extensions",
  "summary": "❌ Access to a computer was denied",
  "title": "❌ Access to a computer was denied",
  "sections": [
    {
      "title": "Details",
      "facts": [
        {
          "name": "Access type",
          "value": "{AuthZResult.AccessType}"
        },
        {
          "name": "Name",
          "value": "{user.DisplayName}"
        },
        {
          "name": "User name",
          "value": "{user.MsDsPrincipalName}"
        },
        {
          "name": "Computer",
          "value": "{computer.MsDsPrincipalName}"
        },
        {
          "name": "Password expiry",
          "value": "{computer.LapsExpiryDate}"
        },
        {
          "name": "Matched rule",
          "value": "{AuthzResult.MatchedRuleDescription}"
        },
        {
          "name": "Matched principal",
          "value": "{AuthzResult.MatchedPrincipal}"
        },
        {
          "name": "Request reason",
          "value": "{request.Reason}"
        }
      ]
    }
  ]
}
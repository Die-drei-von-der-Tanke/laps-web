{
  "Hosting": {
    "Environment": "HttpSys",
    "HttpSys": {
      "Urls": [ "http://localhost:5000", "https://localhost:5001" ],
      "MaxConnections": 100,
      "MaxRequestBodySize": 2480000,
      "AllowClientCerts": true,
      "Http503Verbosity": "Limited",
      "EnableResponseCaching": false,
      "AllowSynchronousIO": false,
      "MaxAccepts": 100
    }
  },
  "Authentication": {
    "Mode": "Iwa",
    "Iwa": {
      "AuthenticationSchemes":  "Negotiate,NTLM,Kerberos,Basic"
    },
    "Oidc": {
      "ClientId": "bla",
      "Secret": "bla",
      "RedirectUri": "bla",
      "Authority": "bla",
      "IdpLogout": true
    },
    "WsFed": {
      "Realm": "bla",
      "Metadata": "bla",
      "IdpLogout": true
    }
  },
  "Authorization": {
    "JsonProvider": {
      "Enabled": true,
      "AuthorizationFile": "targets.json"
    },
    "PowershellProvider": {
      "Enabled": true,
      "ScriptFile": "scripts\\authzsample.ps1",
      "Timeout": 30
    }
  },
  "Auditing": {
    "NotificationChannels": {
      "Smtp": [
        {
          "Enabled": false,
          "Id": "email-domain-admins",
          "TemplateSuccess": "EmailAuditSuccess.html",
          "TemplateFailure": "EmailAuditFailure.html",
          "EmailAddresses": [ "laps@lithnet.local" ]
        }
      ],
      "Webhooks": [
        {
          "Enabled": false,
          "Id": "slack-web-hook-da-channel",
          "TemplateSuccess": "SlackTemplateSuccess.json",
          "TemplateFailure": "SlackTemplateFailure.json",
          "Url": "https://xx",
          "HttpMethod": "POST",
          "ContentType": "application/json"
        },
        {
          "Enabled": false,
          "Id": "teams-web-hook-da-channel",
          "TemplateSuccess": "TeamsTemplateSuccess.json",
          "TemplateFailure": "TeamsTemplateFailure.json",
          "Url": "https://xx",
          "HttpMethod": "POST",
          "ContentType": "application/json"
        }
      ],
      "PowerShell": [
        {
          "Enabled": true,
          "Id": "send-to-powershell",
          "Script": "scripts/audit.ps1"
        }
      ]
    },
    "GlobalNotifications": {
      "OnSuccess": [ "email-domain-admins" ],
      "OnFailure": [ "email-domain-admins" ]
    }
  },
  "Email": {
    "Host": "smtp.lithnet.local",
    "Port": 25,
    "UseSsl": true,
    "UseDefaultCredentials": false,
    "Username": "username",
    "Password": "password",
    "FromAddress": "laps@lithnet.local"
  },
  "RateLimits": {
    "PerIP": {
      "Enabled": true,
      "RequestsPerMinute": 5,
      "RequestsPerHour": 51,
      "RequestsPerDay": 101
    },
    "PerUser": {
      "Enabled": true,
      "RequestsPerMinute": 6,
      "RequestsPerHour": 52,
      "RequestsPerDay": 102
    }
  },
  "UserInterface": {
    "Title": "Lithnet Admin Access Service",
    "UserSuppliedReason": "optional"
  }
}
